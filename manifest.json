{
  "manifest_version": 3,
  "name": "Smart Zetamac Coach",
  "version": "2.1",
  "description": "Track your Zetamac performance with detailed analytics and normalized scoring",

  "permissions": [
    "storage"
  ],

  "host_permissions": [
    "https://arithmetic.zetamac.com/*",
    "https://script.google.com/macros/s/*"
  ],

  "background": {
    "service_worker": "background/index.js"
  },

  "content_scripts": [
    {
      "matches": ["https://arithmetic.zetamac.com/*"],
      "js": ["content/inject.js"],
      "run_at": "document_end"
    }
  ],

  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Smart Zetamac Coach"
  },

  "web_accessible_resources": [
    {
      "resources": [
        "dashboard/dashboard.html",
        "dashboard/dashboard.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
